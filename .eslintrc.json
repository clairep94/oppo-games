{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest/globals": true,
        "cypress/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "plugins": [
      "cypress",
      "jest",
      "node"
    ],
    "rules": {
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "max-len": ["error", {"code": 200}],
      "newline-per-chained-call": "off", // Turn off the rule
      "no-multiple-empty-lines": "off" // Disabled
    }
}
